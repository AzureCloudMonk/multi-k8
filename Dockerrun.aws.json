{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "nodejs-application",
      "host": {
        "sourcePath": "/var/app/current/nodejs-application"
      }
    },
    {
      "name": "nginx-proxy-conf",
      "host": {
        "sourcePath": "/var/app/current/proxy/conf.d"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "nodejs-application",
      "image": "*insert-url-to-ecs-repository-for-nodejs-appliation*:beta",
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "beta"
        },
        {
          "name": "PORT",
          "value": 2999
        }
      ],
      "essential": true,
      "memory": 512,
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-nodejs-application-beta",
          "containerPath": "/var/log/nodejs-application-beta"
        }
      ],
      "portMappings": [
        {
          "hostPort": 2999,
          "containerPort": 2999
        }
      ]
    },
    {
      "name": "nginx-proxy",
      "image": "nginx",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["nodejs-application"],
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-nginx-proxy",
          "containerPath": "/var/log/nginx"
        },
        {
          "sourceVolume": "nginx-proxy-conf",
          "containerPath": "/etc/nginx/conf.d",
          "readOnly": true
        }
      ]
    }
  ]
}
