FROM node:alpine
WORKDIR "/app"
COPY package.json ./
RUN npm install
COPY . .

ENV REDIS_HOST=${REDIS_HOST}
ENV REDIS_PORT=${REDIS_PORT}
ENV PGUSER=${PGUSER}
ENV PGHOST=${PGHOST}
ENV PGDATABASE=${PGDATABASE}
ENV PGPASSWORD=${PGPASSWORD}
ENV PGPORT=${PGPORT}
ENV PORT=${PORT}

CMD ["npm", "run", "start"]